<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for hardened runtime -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Required for helper tool communication -->
    <key>com.apple.security.temporary-exception.mach-lookup.global-name</key>
    <array>
        <string>com.microverse.helper</string>
    </array>
    
    <!-- Required for SMC access on Intel Macs -->
    <key>com.apple.security.device.serial</key>
    <true/>
    
    <!-- Required for power management -->
    <key>com.apple.security.iokit-user-client-class</key>
    <array>
        <string>AppleSMCClient</string>
        <string>IOPMrootDomain</string>
    </array>
    
    <!-- Required for automation and calendar access -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Required for notifications -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
</dict>
</plist>